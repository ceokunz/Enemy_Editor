<UserControl x:Class="Enemy_Editor.Component.EnemyComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Enemy_Editor.Component"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>

        <StackPanel>
            <ProgressBar x:Name="HealtBar" Height="20"/>
            <Image Name="Icon" Height="150" Width="150"/>
            <TextBlock x:Name="EnemyName" Height="30"/>
        </StackPanel>
            
    </Grid>
</UserControl>
